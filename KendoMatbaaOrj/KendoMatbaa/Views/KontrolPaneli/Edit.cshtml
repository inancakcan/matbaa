@model KendoMatbaa.Models.KritikSeviye

@{
    ViewBag.Title = "Düzenleme";
}

<h2>Düzenleme</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>KritikSeviye</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.KritikSeviyeId)

        <div class="form-group">
            @Html.LabelFor(model => model.KritikStok, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KritikStok)
                @Html.ValidationMessageFor(model => model.KritikStok)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GuncelStok, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GuncelStok)
                @Html.ValidationMessageFor(model => model.GuncelStok)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AltGruplarId, "AltGruplarId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("AltGruplarId", String.Empty)
                @Html.ValidationMessageFor(model => model.AltGruplarId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Liste", "Index")
</div>
