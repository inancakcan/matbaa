@model IEnumerable<KendoMatbaa.Models.spAylaraGoreKagitHarcamasi_Result>

@{
    Layout = null;
}

@{
    ViewBag.Title = "Aylara Göre Kağıt Harcaması";
}

<h2>Aylara Göre Kağıt Harcaması (kg)</h2>



<div class="chart-wrapper" style="width:500px;">
    @(Html.Kendo().Chart<KendoMatbaa.Models.spAylaraGoreKagitHarcamasi_Result>()
      .Name("AylaraGoreKagitHarcamasiChart")
      .Legend(legend => legend.Position(ChartLegendPosition.Bottom))
      .DataSource(dataSource => dataSource
                      .Read(read => read.Action("spAylaraGoreKagitHarcamasi_Read", "KontrolPaneli")) // Specify the action method and controller name
      )
              .Series(series =>
              {
                  series.Line(d => d.Adet)
                        .Name("Aylara Göre Kağıt Harcamaları (kg)");
              })
                .CategoryAxis(axis => axis
                         .Categories(model => model.Zaman).Labels(labels => labels.Font("10px sans-serif")))
                         .Tooltip(tooltip => tooltip.Visible(true))



    )



