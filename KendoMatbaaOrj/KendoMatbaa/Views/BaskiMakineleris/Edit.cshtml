@model KendoMatbaa.Models.BaskiMakineleri

@{
    ViewBag.Title = "Baskı Makinesi Düzenleme";
}

<h2>Düzenleme</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Baskı Makineleri</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.BaskiMakineleriId)

        <div class="form-group">
            @Html.LabelFor(model => model.MakineAdi, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MakineAdi)
                @Html.ValidationMessageFor(model => model.MakineAdi)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Listeye Geri Dön", "Index")
</div>
