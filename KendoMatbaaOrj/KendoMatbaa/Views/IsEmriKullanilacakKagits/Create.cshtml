            <div class="col-md-10">
                @Html.EditorFor(model => model.Silindi)
                @Html.ValidationMessageFor(model => model.Silindi)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Yeni Kayıt Oluştur" class="btn btn-default" />
            </div>
        </div>
    </div>
}



<script type="text/javascript">
    $(document).ready(function () {

        //var valkapakVArMiHdn = $('#kapakVarMiHdn').val();
        if ($('#kapakVarMiKagitHdn').val() == "yok") {
            $('#divkapakCins').hide();
            $('#divkapakBaskiBoyutu').hide();
            $('#divkapakNet').hide();
            $('#divkapakTabaka').hide();
            $('#divkapakFire').hide();
            

        }
        else {
            $('#divkapakCins').show();
            $('#divkapakBaskiBoyutu').show();
            $('#divkapakNet').show();
            $('#divkapakTabaka').show();
            $('#divkapakFire').show();
        }
    });
</script>








