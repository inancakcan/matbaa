@using KendoMatbaa.App_Start
@model KendoMatbaa.Models.IsEmriKullanilacakKagit


@{
    Layout = "~/Views/Shared/Tab.cshtml";
}



@{
    ViewBag.Title = "Oluşturma";
}

<h2>Oluştur</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Kağıt</h4>
        <hr/>





        @Html.ValidationSummary(true)
        <div class="form-group">
            @{
    Query q = new Query();
    bool kapakVarMi = q.IsEmriOlmayanIsParcasiniIceriyorMu(1, Convert.ToInt32(ViewBag.SeciliIsEmriId));//KApak
    if (kapakVarMi)
    {
        <input type="hidden" id="kapakVarMiKagitHdn" value="yok" />
    }

            }

            @Html.LabelFor(model => model.IsEmriID, "İş No", htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownList("IsEmriID", String.Empty)
                @Html.ValidationMessageFor(model => model.IsEmriID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IcKagitCins, "İç Kağıt", htmlAttributes: new { @class = "control-label col-md-2" })
