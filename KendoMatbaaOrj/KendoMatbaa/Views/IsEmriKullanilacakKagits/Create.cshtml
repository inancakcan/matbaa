            <div class="col-md-10">
                @Html.DropDownList("IcBaskiBoyutu", String.Empty)
                @Html.ValidationMessageFor(model => model.IcBaskiBoyutu)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IcTabaka, "İç Tabaka", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IcTabaka", String.Empty)
                @Html.ValidationMessageFor(model => model.IcTabaka)
            </div>
        </div>

        <div class="form-group" id="divkapakCins">
            @Html.LabelFor(model => model.KapakCins, "Kapak Cins", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("KapakCins", String.Empty)
                @Html.ValidationMessageFor(model => model.KapakCins)
            </div>
        </div>

        <div class="form-group" id="divkapakBaskiBoyutu">
            @Html.LabelFor(model => model.KapakBaskiBoyutu, "Kapak Baskı Boyutu", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("KapakBaskiBoyutu", String.Empty)
                @Html.ValidationMessageFor(model => model.KapakBaskiBoyutu)
            </div>
        </div>

        <div class="form-group" id="divkapakNet">
            @Html.LabelFor(model => model.KapakNet, "Kapak Net", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KapakNet)
                @Html.ValidationMessageFor(model => model.KapakNet)
            </div>
        </div>

        <div class="form-group" id="divkapakTabaka">
            @Html.LabelFor(model => model.KapakTabaka, "Kapak Tabaka", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("KapakTabaka", String.Empty)
                @Html.ValidationMessageFor(model => model.KapakTabaka)
            </div>
        </div>

        <div class="form-group" id="divkapakFire">
            @Html.LabelFor(model => model.KapakFire, "Kapak Kağıt Fire", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KapakFire)
                @Html.ValidationMessageFor(model => model.KapakFire)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Otokopi, htmlAttributes: new { @class = "control-label col-md-2" })
