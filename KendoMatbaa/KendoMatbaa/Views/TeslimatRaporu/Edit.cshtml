@model KendoMatbaa.Models.TeslimatRaporu
@{
    Layout = "~/Views/Shared/_LayoutjQueryValYok.cshtml";
}

@{
    ViewBag.Title = "Düzenleme";
}

<h2>Düzenleme</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Teslima tRaporu</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.TeslimatRaporuId)

        <div class="form-group">
            @Html.LabelFor(model => model.IsEmriId, "İş No", new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.DropDownList("IsEmriId", String.Empty)
                @Html.ValidationMessageFor(model => model.IsEmriId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TeslimEdenPersonel, "Teslim Eden", new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.DropDownList("TeslimEdenPersonel", String.Empty)
                @Html.ValidationMessageFor(model => model.TeslimEdenPersonel)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TeslimAlan,"Teslim Alan", new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.TeslimAlan)
                @Html.ValidationMessageFor(model => model.TeslimAlan)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TeslimatMiktari,"Teslimat Miktarı", new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.TeslimatMiktari)
                @Html.ValidationMessageFor(model => model.TeslimatMiktari)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Tarih, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Tarih)
                @Html.ValidationMessageFor(model => model.Tarih)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Liste", "Index")
</div>
