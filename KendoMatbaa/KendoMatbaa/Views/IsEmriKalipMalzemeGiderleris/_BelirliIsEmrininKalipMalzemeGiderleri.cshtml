@model IEnumerable<KendoMatbaa.Models.IsEmriKalipMalzemeGiderleri>


@{
    Layout = "~/Views/Shared/Tab.cshtml";
}
@{
    ViewBag.Title = "Index";
}

<h2>Liste</h2>


@(Html.Kendo().Window()
    .Name("windowKalip")
    .Title("Kalıp Malzeme Ekleme")
               .LoadContentFrom("Create", "IsEmriKalipMalzemeGiderleris", new { SeciliIsEmriId = Request["IsEmriId"] })
    .Draggable()
    .Resizable()
    .Width(800)
    .Visible(false)
    .Modal(true)
    .Iframe(false)
    .Actions(actions => actions.Pin().Minimize().Maximize().Close())
        //.Events(events => events
        //    .Close("onClose")
        //    )
)

<span id="btnKalipEkle" class="k-button">Kalıp eklemek için tıklayın...</span>

<script>
       $(document).ready(function () {
           $("#btnKalipEkle").bind("click", function () {
            $("#windowKalip").data("kendoWindow").open();
        });
    });
</script>


<br /><br />


@*<p>
    @Html.ActionLink("Yeni", "Create")
</p>*@
<table class="table">
    <tr>
       
        <th>
            @*@Html.DisplayNameFor(model => model.Ic)*@
            İç
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Dis)*@
