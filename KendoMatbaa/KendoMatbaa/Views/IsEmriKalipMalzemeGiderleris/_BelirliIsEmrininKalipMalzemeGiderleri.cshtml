    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @*@Html.DisplayFor(modelItem => item.Ic)*@
                @if(item.Ic.Value == true){
                        <span style="color:green"><b>Evet</b> </span>
                }
                else
                {
                    <span style="color:red"><b>Hayır</b></span>
                }
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Dis)*@
                @if (item.Dis.Value == true)
                {
                    <span style="color:green"><b>Evet</b> </span>
                }
                else
                {
                    <span style="color:red"><b>Hayır</b></span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KullanilanKalipSayisi)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Silindi)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.IsEmri.IsNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AltGruplar.AltGrupAdi)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.IsEmriKalipMalzemeGiderleriId }) |
                @Html.ActionLink("Detay", "Details", new { id = item.IsEmriKalipMalzemeGiderleriId }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.IsEmriKalipMalzemeGiderleriId })
            </td>
        </tr>
    }

</table>
